<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>


<GridPane
   fx:id="root"
   fx:controller="io.javasmithy.AppController"
   xmlns="http://javafx.com/fxml"
   xmlns:fx="http://javafx.com/fxml"
   alignment="CENTER"
   hgap="10"
   vgap="10">
   <!-- gridLinesVisible="true" -->

   <padding>
      <Insets
         top="25"
         left="25"
         right="25"
         bottom="25"
      />
   </padding>

   <VBox fx:id="zipcode" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <HBox fx:id="zipInput" spacing="10.0">
            <Label fx:id="inputLabel" text="Zip Code: "/>
            <TextField fx:id="zipTxtField" text=""/>
         </HBox>
         <HBox fx:id="zipAction" spacing="10.0">
            <Button fx:id="searchButton" text="Search" onAction="#getZipcode"/>
            <Label text=""/>
         </HBox>  
   </VBox>

   <TextArea fx:id="weatherOutput" editable="false" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

</GridPane>

